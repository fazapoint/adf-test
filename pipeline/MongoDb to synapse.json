{
	"name": "MongoDb to synapse",
	"properties": {
		"activities": [
			{
				"name": "documents",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbV2Source",
						"batchSize": 100
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "MongoDb_Dataset",
						"type": "DatasetReference",
						"parameters": {
							"collection_name": "documents"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "CSV_ADLS_faza",
						"type": "DatasetReference",
						"parameters": {
							"container_name": "fazatest",
							"folder_name": "raw",
							"delimiter_name": ",",
							"row_as_header": true
						}
					}
				]
			}
		],
		"annotations": []
	}
}